# Web-888 SDR Configuration
# ==========================

# REQUIRED: Web-888 SDR connection
WEB888_HOST=192.168.1.100
WEB888_PORT=8073

# Optional: MAC address (enables HA device registry linking)
# Found on admin Network tab, format: AA:BB:CC:DD:EE:FF
WEB888_MAC=

# Optional: Admin password (enables WebSocket mode with full data)
# Without password, uses HTTP-only mode (basic monitoring)
WEB888_PASSWORD=

# Optional: Force mode (auto-detects based on password if not set)
# WEB888_MODE=http       # HTTP-only mode (no auth, basic data)
# WEB888_MODE=websocket  # WebSocket mode (requires password, full data)

# REQUIRED: MQTT broker for Home Assistant
HA_MQTT_BROKER=192.168.1.10
HA_MQTT_PORT=1883
HA_MQTT_USER=
HA_MQTT_PASS=

# Optional: Update interval (seconds)
SCAN_INTERVAL=30

# Optional: Device identification
DEVICE_NAME=Web-888 SDR
DEVICE_ID=

# Optional: Debugging
DEBUG_MODE=false
LOG_LEVEL=INFO

# Optional: Channel sensors (WebSocket mode only)
ENABLE_CHANNEL_SENSORS=true
